<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_free_goods___toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4CAF50"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_free_goods___text_input_layout_product_name"
        android:theme="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#4CAF50">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_free_goods__product_name_window"
            android:background="#4CAF50"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:gravity="right|center"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:hint="Введите наименование товара"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/EditTextHint"
        android:textColor="#FFFFFF"
        android:background="#4CAF50">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_free_goods__price_window"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:gravity="right|center"
            android:hint="Введите цену товара"/>

    </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardView"
            android:background="#F5F5F5"
            android:shadowRadius="0.0"
            android:keyBackground="@android:color/transparent"
            android:keyTextSize="30sp"
            android:keyTextColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" />
</LinearLayout>

    <LinearLayout
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

      <Button
          android:id="@+id/activity_free_goods__button_to_add_free_product"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginTop="15dp"
          android:background="#2196F3"
          android:text = "ДОБАВИТЬ В ЧЕК"
          android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>