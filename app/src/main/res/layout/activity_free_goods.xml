<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#4CAF50">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_free_goods__product_name_window"
            android:background="#4CAF50"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#FFFFFF"
            android:gravity="right|center"
            android:hint="Введите наименование товара"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#4CAF50">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/activity_free_goods__price_window"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:gravity="right|center"
            android:hint="Введите цену товара"/>

    </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardView"
            android:background="#F5F5F5"
            android:keyBackground="@android:color/transparent"
            android:keyTextColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true" />
</LinearLayout>

    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FAFAFA">

      <Button
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:background="#2196F3"
          android:text = "ДОБАВИТЬ В ЧЕК"
          android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>